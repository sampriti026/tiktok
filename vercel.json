{
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/api/$1" },
      { "source": "/(.*)", "destination": "/client/$1" }
    ],
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "cd client && npm run build",
          "distDir": "build"
        }
      },
      { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "env": {
        "NODE_VERSION": "16.x"
    }
}
